.item {
    position: absolute;
    width: 150px;
    height: 250px;
    background-color: rgba(0, 0, 0, 0.59);
    align-items: center;
    justify-content: center;
    transition-duration: 0.3s;
    border-left-color: rgba(207, 178, 178, 0);
    border-right-color: rgba(207, 178, 178, 0);
    border-top-color: rgba(207, 178, 178, 0);
    border-bottom-color: rgba(207, 178, 178, 0);
}

.item:hover {
    border-left-color: rgba(207, 178, 178, 255);
    border-right-color: rgba(207, 178, 178, 255);
    border-top-color: rgba(207, 178, 178, 255);
    border-bottom-color: rgba(207, 178, 178, 255);
    border-left-width: 5px;
    border-right-width: 5px;
    border-top-width: 5px;
    border-bottom-width: 5px;
}

.item > #image {
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    width: 60%;
    height: 36%;
    background-color: rgba(0, 0, 0, 0);
}
